{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "jsx": "react",
//    "jsxFactory": "h",
    "lib": [
      "dom",
      "es2017",
      "es2016.array.include"
    ],
    "module": "es6",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "outDir": "out",
    "rootDir": "src",
    "sourceMap": true,
//    "strict": true,
    "target": "es6"
  },
  "exclude": [
    "src/ignore/*"
  ],
  "include": [
    "src/index.ts"
  ]
}
