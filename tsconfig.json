{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxFactory": "h",
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    // "noUnusedLocals": true,
    "outDir": "out",
    "rootDir": "src",
    // "skipLibCheck": true,
    "sourceMap": true,
    "target": "es6"
  },
  "exclude": [
    "src/ignore/*"
  ],
  "include": [
    "src/index.ts"
  ]
}