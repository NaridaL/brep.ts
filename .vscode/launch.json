    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug rollup",
            "program": "${workspaceFolder}/node_modules/rollup/bin/rollup",
            "args": [
                "-c",
                "./rollup.viewer.config.js"
            ]
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Chrome",
            "port": 9222,
            "webRoot": "${workspaceRoot}"
        }
    ]
}